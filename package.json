{
  "name": "xiquess-design",
  "version": "0.1.4",
  "description": "基于VUE2的组件库,由智邦·喜鹊前端团队开发并维护",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "npm-run-all --serial build:*",
    "build:js": "webpack --config ./build/webpack.component.js",
    "build:css": "gulp sass --gulpfile build/gulpfile.js",
    "build:font": "gulp copy --gulpfile build/gulpfile.js",
    "lint": "vue-cli-service lint",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "depoly": "bash ./build/deploy.sh"
  },
  "dependencies": {
    "core-js": "^3.8.3",
    "element-ui": "^2.15.14",
    "gulp": "^4.0.2",
    "gulp-minify-css": "^1.2.4",
    "gulp-sass": "^5.1.0",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "babel-plugin-component": "^1.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "vue-loader": "^15.1.0",
    "vue-template-compiler": "^2.7.15",
    "vuepress": "^1.9.10",
    "webpack": "^4",
    "webpack-cli": "^4",
    "webpack-dev-server": "^4.15.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": "vue-cli-service lint"
  },
  "main": "dist/index.umd.js",
  "keywords": [
    "vue",
    "UI",
    "vue2",
    "element-ui"
  ],
  "author": "zzzzhhhn",
  "files": [
    "dist",
    "components"
  ],
  "resolutions": {
    "webpack-hot-middleware": "2.25.0"
  }
}
